# ========================================
# AutoFleet - Configuration d'environnement
# ========================================
# IMPORTANT: Ne JAMAIS commiter ce fichier sur Git
# Ajouter .env dans .gitignore

# ========================================
# BASE DE DONNÉES POSTGRESQL
# ========================================
DATABASE_URL=postgresql://autofleet_user:VOTRE_MOT_DE_PASSE@localhost:5432/autofleet
DB_HOST=localhost
DB_PORT=5432
DB_USER=autofleet_user
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_EN_PRODUCTION
DB_NAME=autofleet
DB_SSL=false

# Pour la production (exemple avec service managé)
# DATABASE_URL=postgresql://autofleet_user:password@db.autofleet.sn:5432/autofleet
# DB_SSL=true

# ========================================
# JWT - AUTHENTIFICATION
# ========================================
JWT_SECRET=CHANGEZ_CE_SECRET_PAR_UNE_LONGUE_CHAINE_ALEATOIRE_SECURISEE
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=AUTRE_SECRET_POUR_REFRESH_TOKEN
JWT_REFRESH_EXPIRATION=7d

# Générer un secret sécurisé avec:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# ========================================
# APPLICATION
# ========================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# En production:
# NODE_ENV=production
# PORT=3000
# API_URL=https://api.autofleet.sn
# FRONTEND_URL=https://autofleet.sn

# ========================================
# SÉCURITÉ
# ========================================
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=AUTRE_SECRET_POUR_SESSIONS

# En production (plusieurs domaines):
# CORS_ORIGIN=https://autofleet.sn,https://www.autofleet.sn

# ========================================
# EMAIL / NOTIFICATIONS
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@autofleet.sn
SMTP_PASSWORD=VOTRE_MOT_DE_PASSE_EMAIL
SMTP_FROM=AutoFleet <noreply@autofleet.sn>

# ========================================
# SMS (Optionnel - Service sénégalais)
# ========================================
SMS_PROVIDER=orange_sn
SMS_API_KEY=VOTRE_CLE_API_SMS
SMS_SENDER_ID=AutoFleet

# ========================================
# FICHIERS / STOCKAGE
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# En production avec S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=VOTRE_CLE
# AWS_SECRET_ACCESS_KEY=VOTRE_SECRET
# AWS_REGION=eu-west-1
# AWS_BUCKET=autofleet-uploads

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/autofleet.log

# En production:
# LOG_LEVEL=error
# LOG_FILE=/var/log/autofleet/app.log

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/backups/autofleet

# ========================================
# MONITORING (Optionnel)
# ========================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
GOOGLE_ANALYTICS_ID=

# ========================================
# MAINTENANCE
# ========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Maintenance en cours. Retour prévu à 14h00.

# ========================================
# DÉVELOPPEMENT UNIQUEMENT
# ========================================
DEBUG=true
ENABLE_API_DOCS=true
SEED_DATABASE=false